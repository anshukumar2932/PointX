# =============================================================================
# PointX Production Environment Configuration - RENDER DEPLOYMENT
# =============================================================================
# DO NOT commit actual secrets to version control
# Set these values in Render's environment variables dashboard

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_ENV=production
SECRET_KEY=your-production-secret-key-here
PORT=5000

# =========================================================================
# SECURITY / DEBUG
# =============================================================================
DEBUG=false
TESTING=false

# =============================================================================
# JWT AUTHENTICATION
# ======================================
JWT_SECRET=your-production-jwt-secret-here
JWT_EXPIRATION_HOURS=24

# =============================================================================
# SUPABASE DATABASE CONFIGURATION
# =============================================================================
SUPABASE_URL=https://sqcyytvdjeenzwpdlcjc.supabase.co
SUPABASE_KEY=your-supabase-service-role-key-here

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins for production
ALLOWED_ORIGINS=https://pointx-fyi.vercel.app

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/pointx-prod.log

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=16777216
